@page "/type/{TypeId:int}"
@attribute [Authorize]
@inject HttpClient http

<h3>Type #@TypeId</h3>

@if (Type != null)
    {
        <div class="container">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <span>Type #@Type.Id</span>
                </div>
                <div class="card-body">
                    <h4 class="card-title">@Type.Name</h4>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-3">
                <div class="text-center justify-content-between w-25">
                    <a href="@($"/type/edit/{TypeId}") class="btn btn-outline-primary">Edit</a>
                    <hr />
                    <a href="/type">Back to Types Index</a>
                </div>
            </div>
        </div>
    }
    else
{
        <p>Loading...</p>
}

@code {
    [Parameter]
    public int TypeId { get; set; }
    public TypeDetail Type { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Type = await http.GetFromJsonAsync<TypeDetail>($"/api/type/{TypeId}");
    }

}

